.panel.panel-default
  .panel-heading Données profil
  .panel-body
    .row
      .col-md-3
        = image_tag current_user.gravatar_url(size: 200)
      .col-md-4
        %table.table
          %thead
            %tr
              %td
          %tbody
            %tr
              %th Prénom:
              %td= change_blank_to_dash(current_proprio.first_name)
            %tr
              %th Nom:
              %td= change_blank_to_dash(current_proprio.last_name)
            %tr
              %th Téléphone:
              %td= change_blank_to_dash(current_proprio.phone_number)
            %tr
              %th Email:
              %td= change_blank_to_dash(current_proprio.email)
            %tr
              %th Nationalité:
              %td= change_blank_to_dash(current_proprio.country)
      .col-md-4
        %table.table
          %thead
            %tr
              %td
          %tbody
            %tr
              %th Rue:
              %td= change_blank_to_dash(current_proprio.street)
            %tr
              %th Code postal:
              %td= change_blank_to_dash(current_proprio.zip_code)
            %tr
              %th Ville:
              %td= change_blank_to_dash(current_proprio.city)
      .col-md-4
    .pull-right
      = link_to "Modifier", edit_registration_path(current_proprio), class: "btn btn-default"

.panel.panel-default
  .panel-heading Animaux
  .panel-body
    - if @animals.empty?
      .alert.alert-warning.table-warning Pas d'animaux.
    - else
      %table.table.table-striped
        %thead
          %tr
            %th N° identification
            %th Nom
            %th Quantité
            %th Sexe
            %th Espèce
            %th

        %tbody
          - @animals.each do |animal|
            %tr
              %td= change_blank_to_dash(animal.id_number)
              %td= change_blank_to_dash(animal.name)
              %td= change_blank_to_dash(animal.amount)
              %td= change_blank_to_dash(animal.gender)
              %td= change_blank_to_dash(animal.try(:species).try(:name))
              %td
                .pull-right
                  = link_to icon('list-alt'), proprio_animal_path(current_proprio, animal), title: 'Détails', class: "btn btn-default"

      .pull-right
        = link_to "Plus", proprio_animals_path(current_proprio), class: "btn btn-default"

.panel.panel-default
  .panel-heading Fichier
  .panel-body
    - if @medical_records.empty?
      .alert.alert-warning.table-warning Pas de fiche.
    - else
      %table.table.table-striped
        %thead
          %tr
            %th Renseignements
            %th Maladie
            %th Vétérinaire
            %th Description
            %th Commentaire
            %th

        %tbody
          - @medical_records.each do |medical_record|
            %tr
              %td= change_blank_to_dash(medical_record.anamnesis)
              %td= change_blank_to_dash(medical_record.decorate.name_of_disease)
              %td= change_blank_to_dash(medical_record.try(:veterinarian).try(:proprio).try(:decorate).try(:full_name))
              %td= change_blank_to_dash(medical_record.description)
              %td= change_blank_to_dash(medical_record.comment)
              %td
                .pull-right
                  = link_to icon('list-alt'), proprio_medical_record_path(current_proprio, medical_record), title: 'Détails', class: "btn btn-default"

      .pull-right
        = link_to "Autre", proprio_medical_records_path(current_proprio), class: "btn btn-default"

.panel.panel-default
  .panel-heading Hospitalisation
  .panel-body
    - if @hospits.empty?
      .alert.alert-warning.table-warning Pas de fichier.
      .pull-right
        = link_to "Ajouter", new_proprio_hospit_path(proprio), class: "btn btn-default"
    - else
      %table.table.table-striped
        %thead
          %tr
            %th Cause hospitalisation
            %th Diagnostic ou suspicion
            %th Vétérinaire
            %th Observations
            %th.date-row Date
            %th.btn-row-2

        %tbody
          - @hospits.each do |hospit|
            %tr
              %td= change_blank_to_dash(hospit.anamnesis)
              %td= change_blank_to_dash(hospit.decorate.name_of_disease)
              %td= change_blank_to_dash(hospit.veterinarian.user.last_name)
              %td= change_blank_to_dash(hospit.description)
              %td= change_blank_to_dash(hospit.created_at.to_date)
              %td
                .pull-right
                  = link_to icon('list-alt'), proprio_hospit_path(proprio, hospit), title: 'Détails', class: "btn btn-default"
                  = link_to icon('edit'), edit_proprio_hospit_path(proprio, hospit), title: 'Modifier', class: "btn btn-default"
      .pull-right
        = link_to "Ajouter", new_proprio_hospit_path(proprio), class: "btn btn-default"

.panel.panel-default
  .panel-heading Photos
  .panel-body
    - if @pictures.empty?
      .alert.alert-warning.table-warning Pas de photo.
    - else
      %table.table.table-striped
        %thead
          %tr
            %th Nom
            %th Animal
            %th Image
            %th Déscription
            %th

        %tbody
          - @pictures.each do |picture|
            %tr
              %td= change_blank_to_dash(picture.name)
              %td= change_blank_to_dash(picture.animal.name)
              %td= link_to image_tag(picture.image, width: 100), picture.image.url
              %td= change_blank_to_dash(picture.description)
              %td
                .pull-right
                  = link_to icon('list-alt'), proprio_picture_path(current_proprio, picture), title: 'Détails', class: "btn btn-default"

      .pull-right
        = link_to "Plus", proprio_pictures_path(current_proprio), class: "btn btn-default"
