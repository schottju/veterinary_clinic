= form_tag user_veterinarians_path, method: :get do
  = hidden_field_tag :direction, params[:direction]
  = hidden_field_tag :sort, params[:sort]
  .form-inline
    = text_field_tag :search, params[:search], placeholder: 'Entrez le nom du vétérinaire', class: 'form-control', size: 35
    = submit_tag "Recherche", name: nil, class: 'btn btn-default'
